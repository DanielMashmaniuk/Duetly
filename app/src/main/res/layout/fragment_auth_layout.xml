<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBGColor">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_sec_color_circle"
        android:padding="12dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/profile_circle_svgrepo_com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/usernameL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_sec_color"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        tools:layout_editor_absoluteX="40dp">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:src="@drawable/profile_circle_svgrepo_com"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/inputUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/dark"
            android:hint="Nickname..."
            android:maxLength="30"
            android:padding="7dp"
            android:text=""
            android:textColor="@color/dark"
            android:textColorHint="@color/colorZ"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/numLettersName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:text="0/30"
            android:textColor="@color/dark"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/emailL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_sec_color"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/usernameL"
        tools:layout_editor_absoluteX="40dp">

        <ImageView
            android:id="@+id/emailI"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:src="@drawable/email_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/dark"
            android:maxWidth="200dp"
            android:hint="E-mail..."
            android:maxLength="254"
            android:padding="7dp"
            android:text=""
            android:textColor="@color/dark"
            android:textColorHint="@color/colorZ"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/emailI"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/passwordL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_sec_color"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/emailL"
        tools:layout_editor_absoluteX="40dp">

        <ImageView
            android:id="@+id/passwordI"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:src="@drawable/password_minimalistic_svgrepo_com"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/dark"
            android:hint="Password..."
            android:maxLength="35"
            android:padding="7dp"
            android:inputType="textPassword"
            android:text=""
            android:textColor="@color/dark"
            android:textColorHint="@color/colorZ"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/passwordI"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/numLettersPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:text="0/35"
            android:textColor="@color/dark"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/checkPasswordL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_sec_color"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/passwordL"
        tools:layout_editor_absoluteX="40dp">

        <ImageView
            android:id="@+id/checkPI"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:src="@drawable/password_minimalistic_input_svgrepo_com"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/inputCheckPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/dark"
            android:hint="Password..."
            android:maxLength="35"
            android:inputType="textPassword"
            android:padding="7dp"
            android:text=""
            android:textColor="@color/dark"
            android:textColorHint="@color/colorZ"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/checkPI"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/numLettersCP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:text="0/35"
            android:textColor="@color/dark"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/actionsL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/bg_transparent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/checkPasswordL"
        tools:layout_editor_absoluteX="40dp">
    <LinearLayout
        android:id="@+id/LogUp"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:background="@drawable/bg_sec_color"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/dark"
            android:textSize="18sp"
            android:text="Log Up"
            android:layout_gravity="center"
/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/LogIn"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_sec_color"
            android:gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:text="Log In"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/verifyWindow"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/bg_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/timer_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05:00"
            android:textSize="24sp"
            android:textColor="@color/secColor"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/num_1"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bg_active_code"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/code_inp_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:inputType="number"
                    android:padding="0dp"
                    android:text=""
                    android:textColor="@color/light"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/num_2"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bg_white_stroke"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/code_inp_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"

                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text=""
                    android:textColor="@color/light"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/num_3"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_white_stroke"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/code_inp_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="1"

                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text=""
                    android:textColor="@color/light"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/num_4"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_white_stroke"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/code_inp_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:inputType="number"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text=""
                    android:textColor="@color/dark"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/num_5"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginStart="5dp"
                android:background="@drawable/bg_white_stroke"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/code_inp_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text=""
                    android:textColor="@color/dark"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/num_6"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginStart="5dp"
                android:background="@drawable/bg_white_stroke"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/code_inp_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="1"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text=""
                    android:textColor="@color/dark"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

