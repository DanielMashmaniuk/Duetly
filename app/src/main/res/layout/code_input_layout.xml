<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/verifyWindow"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/bg_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/timer_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05:00"
            android:textSize="24sp"
            android:textColor="@color/secColor"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/num_1"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bg_active_code"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/code_inp_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:inputType="number"
                    android:padding="0dp"
                    android:text=""
                    android:textColor="@color/light"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/num_2"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bg_white_stroke"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/code_inp_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"

                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text=""
                    android:textColor="@color/light"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/num_3"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_white_stroke"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/code_inp_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="1"

                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text=""
                    android:textColor="@color/light"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/num_4"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_white_stroke"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/code_inp_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:inputType="number"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text=""
                    android:textColor="@color/dark"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/num_5"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginStart="5dp"
                android:background="@drawable/bg_white_stroke"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/code_inp_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text=""
                    android:textColor="@color/dark"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/num_6"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginStart="5dp"
                android:background="@drawable/bg_white_stroke"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/code_inp_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="1"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text=""
                    android:textColor="@color/dark"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

