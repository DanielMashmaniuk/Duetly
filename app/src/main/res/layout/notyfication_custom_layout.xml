<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/dark">

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/music_note_4_svgrepo_com" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Song Title"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notification_artist"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Artist Name"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            android:textSize="7sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/notification_prev"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="8dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/button_circle_round_arrow_previous_svgrepo_com" />

    <ImageButton
        android:id="@+id/notification_play_pause"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@null"
        android:layout_margin="8dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/play_square_svgrepo_com" />

    <ImageButton
        android:id="@+id/notification_next"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="8dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/button_circle_round_arrow_next_svgrepo_com" />
</LinearLayout>
